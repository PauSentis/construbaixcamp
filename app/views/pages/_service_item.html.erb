<div class="col-lg-4 col-sm-6 mb-4">
  <div class="service-item">
    <a class="service-link" data-bs-toggle="modal" href="#serviceModal<%= service %>">
      <div class="service-hover">
        <div class="service-hover-content"><i class="fas fa-plus fa-3x"></i></div>
      </div>
      <img class="img-fluid" src="assets/services/<%= service %>.jpg" alt="<%= t("service.#{ service }.title") %>" />
    </a>
    <div class="service-caption">
      <div class="service-caption-heading"><%= t("service.#{ service }.title") %></div>
    </div>
  </div>
</div>

<div class="service-modal modal fade" id="serviceModal<%= service %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="close-modal" data-bs-dismiss="modal"><img src="assets/close-icon.svg" alt="Close modal" /></div>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="modal-body">
              <h2 class="text-uppercase"><%= t("service.#{ service }.title") %></h2>
              <img class="img-fluid d-block mx-auto" src="assets/services/<%= service %>.jpg" alt="<%= t("service.#{ service }.title") %>" />
              <%= t("service.#{ service }.modal.text").html_safe %>
              <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                <i class="fas fa-times me-1"></i>
                <%= t(:close) %>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>